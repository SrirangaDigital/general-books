% \mfig[4]{scale-box}{figure}{label}{caption}
%
\newcommand{\mfig}[4]%
{\begin{marginfigure}%
{\scalebox{#1}{\includegraphics{#2}}}%
\vspace*{1\bsk}\caption{\dm #3}%
\label{#4}\end{marginfigure}}%
%
